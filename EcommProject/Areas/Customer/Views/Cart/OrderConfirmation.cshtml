@model IEnumerable<EcommProject.Models.OrderDetail>
<div class="container row">
    <div class="col-12 text-center">
        <h2 class="text-primary text-center">Order Submitted Successfully</h2><br />
        <img src="~/images/products/success.png" width="20%" />
    </div>
    <div class="col-12 text-center" style="color:green">
        <br />
        Thank you for your order! <br />
        We have received your order and we will send a follow up email shortly!
        <br />
        Your Order Number is : @ViewBag.Id
    </div>
    <div class="container offset-9">
        <a class="btn btn-success form-control" asp-action="Index" asp-controller="">Back to List</a>
    </div>
    <div class="container">
        <table class="table table-active table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    
                </tr>
                
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Title</td>
                        <td>@item.Count</td>
                        <td>@item.Price</td>
                    </tr>
                }
                <tr>
                    <td class="offset-10">OrderTotal: @Model.Sum(item=>item.Price*item.Count)</td>
                </tr>
            </tbody>
        </table>
    </div>
   
</div>