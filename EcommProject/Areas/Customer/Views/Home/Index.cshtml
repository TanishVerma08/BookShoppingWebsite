@model IEnumerable<EcommProject.Models.ViewModels.OrderDetailVM>

<div class="container border m-2 p-2 bg-white h-100%">
    <table id="tblData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Products</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <div class="row p-2">
                        @foreach (var product in Model)
                        {
                            <div class="col-lg-3 col-md-6">
                                <div class="row p-2">
                                    <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                                        <div class="card" style="border:0px;">
                                            <img src="@product.Products.ImageUrl" class="card-img-top rounded" />
                                            <div class="pl-1">
                                                <p class="card-title h5"><b style="color:#2c3e50">@product.Products.Title</b></p>
                                                <p class="card-title text-primary">by <b>@product.Products.Author</b></p>
                                            </div>
                                            <div style="padding-left:5px;">
                                                <p>List Price: <strike><b class="">$@product.Products.ListPrice.ToString("0.00")</b></strike></p>
                                            </div>
                                            <div style="padding-left:5px;">
                                                <p style="color:forestgreen">As low as: <b class="">$@product.Products.Price100.ToString("0.00")</b></p>
                                            </div>
                                            <div style="padding-left:5px;">
                                                <p style="color:maroon">Sold: <b class="">@product.TotalSold</b></p>
                                            </div>
                                        </div>
                                        <div>
                                            <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Products.Id">Buy Now</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/homePage.js"></script>
}
