@model IEnumerable<EcommProject.Models.OrderHeader>
<div class="row">
    <div class="col-9">
        <h2 class="text-primary">Order List</h2>
    </div>

</div>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Phone Number</th>
            <th>Reorder</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("dd-MMM-yyyy")</td>
                <td>@order.ApplicationUser.PhoneNumber</td>
                <td>
                    <a asp-area="Customer" asp-controller="Cart" asp-action="Reorder" asp-route-orderId="@order.Id" class="btn btn-primary">
                        Reorder
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


